{
    "problemMatcher": [
        {
            "owner": "textlint-matcher",
            "severity": "error",
            "pattern": [
                {
                    "regexp": "^([^\\s].*)$",
                    "file": 1
                },
                {
                    "regexp": "^\\s+(\\d+):(\\d+)\\s+âœ“*\\s*(error|warning|info)\\s+(.*)\\s\\s+(.*)$",
                    "line": 1,
                    "column": 2,
                    "severity": 3,
                    "message": 4,
                    "code": 5,
                    "loop": true
                }
            ]
        }
    ]
}
